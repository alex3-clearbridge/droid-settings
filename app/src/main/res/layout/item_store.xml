<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_store_background">

    <!-- Store Title -->
    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_storeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text=""
        android:textAllCaps="true"
        android:textColor="#505050"
        android:textSize="18sp"
        app:font="bold" />

    <!-- __ miles -->
    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_storeDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:text=""
        android:textColor="#A8A8A8"
        android:textSize="16sp"
        app:font="italic" />

    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_storeAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_storeTitle"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:text="Street Address"
        android:textColor="#505050"
        android:textSize="18sp"
        app:font="light" />

    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_storeCityStateZIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_storeAddr"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:text="City, STATE zip"
        android:textColor="#505050"
        android:textSize="18sp"
        app:font="light" />

    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_storeOpenTill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_storeCityStateZIP"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:text="@string/openUntil"
        android:textColor="#A8A8A8"
        android:textSize="16sp"
        app:font="light" />

    <RelativeLayout
        android:id="@+id/layout_dirCallButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_storeOpenTill"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:paddingLeft="5dp">

        <com.livingspaces.proshopper.views.LSTextView
            android:id="@+id/tv_storeDir"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="Directions"
            android:textColor="#F7F6E8"
            android:textSize="18sp" />

        <com.livingspaces.proshopper.views.LSTextView
            android:id="@+id/tv_storeCall"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_storeDir"
            android:background="@drawable/button"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="Call"
            android:textColor="#F7F6E8"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn_centerMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:src="@drawable/ls_m_btn_location" />

    </RelativeLayout>
</RelativeLayout>