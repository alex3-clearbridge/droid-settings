<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corner"
    android:padding="30dp"
    android:clickable="true">

    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_head_login_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.7dp"
        android:layout_centerHorizontal="true"
        android:textSize="17.5sp"
        android:textAllCaps="true"
        android:textColor="@color/MainLog_txt"/>

    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_login_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_head_login_dialog"
        android:layout_marginTop="24.8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="17.5sp"
        android:textColor="@color/MainLog_txt"/>

    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_login_button"
        android:layout_width="171.7dp"
        android:layout_height="37.4dp"
        android:layout_below="@id/tv_login_dialog"
        android:layout_marginTop="35.2dp"
        android:layout_centerHorizontal="true"
        android:text="OK"
        android:background="@drawable/button_login"
        style="@style/LoginButton"/>


    <RelativeLayout
        android:id="@+id/shade_loginDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:clickable="true">

        <com.livingspaces.proshopper.views.LSTextView
            android:id="@+id/tv_searchingTitle_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Working on your request"
            android:layout_centerHorizontal="true"
            app:font="light"
            style="@style/DialogMainTxt"/>

        <ProgressBar
            android:id="@+id/pBar_code_login"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/tv_searchingTitle"
            android:layout_centerHorizontal="true"/>

        <com.livingspaces.proshopper.views.LSTextView
            android:id="@+id/tv_cancelFetch_login"
            android:layout_width="171.7dp"
            android:layout_height="37.4dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pBar_code_login"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:background="@drawable/button_login"
            style="@style/LoginButton"
            android:text="Cancel"/>


    </RelativeLayout>




</RelativeLayout>