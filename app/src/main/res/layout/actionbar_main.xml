<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_topLeft"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_topLeftExtra"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:layout_marginLeft="12.5dp"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:visibility="visible"/>

    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_topCenter"
        style="@style/LSTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:gravity="center"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Fragment Title"
        android:textAllCaps="true"
        app:font="bold" />

    <ImageView
        android:id="@+id/iv_topRight"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17.5dp"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/view_topRightUp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cart_round"
        android:visibility="invisible"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_topRightUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:text="0"
            android:textSize="12sp"
            android:clickable="false" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_topRightExtra"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="14.5dp"
        android:layout_toLeftOf="@id/iv_topRight"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <com.livingspaces.proshopper.views.LSTextView
        android:id="@+id/tv_topRight"
        style="@style/DialogHelpTxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:gravity="center"
        android:singleLine="true"
        app:font="semibold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />

</RelativeLayout>